<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.fiuba.tdp2grupo6.ordertracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="ar.fiuba.tdp2grupo6.ordertracker.service.BootReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.ACTION_SHUTDOWN" />
            </intent-filter>
        </receiver>
        <receiver android:name="ar.fiuba.tdp2grupo6.ordertracker.service.datain.DataInAlarmReceiver" >
        </receiver>
        <receiver android:name="ar.fiuba.tdp2grupo6.ordertracker.service.dataout.DataOutAlarmReceiver" >
        </receiver>

        <service android:name="ar.fiuba.tdp2grupo6.ordertracker.service.datain.DataInService" >
        </service>
        <service android:name="ar.fiuba.tdp2grupo6.ordertracker.service.dataout.DataOutService" >
        </service>

    </application>

</manifest>
