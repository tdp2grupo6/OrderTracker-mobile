<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <!--
            <item name="android:textColor">#00FF00</item>
            <item name="android:typeface">monospace</item>
            <item name="android:textSize">10sp</item>
        -->
    </style>

    <style name="ButtonText" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/button_type_1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:layout_marginBottom">20px</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ItemStock">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItemStatus">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ItemTitulo">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemDescripcion">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ItemPrecio">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="DetalleTitulo">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#434343</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetalleNombre">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#404040</item>
    </style>

    <style name="DetalleMarca">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#404040</item>
    </style>

    <style name="DetalleDescripcionTitulo">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#434343</item>
    </style>

    <style name="DetalleDescripcion">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="DetallePrecio">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="DetalleCodigo">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="DetalleStock">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#666666</item>
    </style>

</resources>
