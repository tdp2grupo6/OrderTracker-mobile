<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
              android:gravity="center_vertical|start">

    <TextView
        android:id="@+id/list_pedido_estado"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/item_cliente_status_red"
        android:gravity="center"
        style="@style/ItemStatus"
        android:text="C"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical|start"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|start"
            >

            <TextView
                android:id="@+id/list_pedido_cliente"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ItemTitulo"
                android:text="China Suarez"
                >
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|start"
            >

            <TextView
                android:id="@+id/list_pedido_nro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/ItemPrecio"
                android:text="# 00001"
                >
            </TextView>

            <TextView
                android:id="@+id/list_pedido_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:textAlignment="viewEnd"
                style="@style/ItemPrecio"
                android:text="17/05/2016">
            </TextView>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/list_pedido_monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="end"
        android:textAlignment="viewEnd"
        style="@style/ItemStock"
        android:text="$ 123,45">
    </TextView>

</LinearLayout>